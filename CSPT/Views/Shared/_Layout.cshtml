<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CSPT</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css?family=Martel+Sans|Satisfy|Source+Sans+Pro:300,700" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>

    <button onclick="topFunction()" id="up-btn" title="Go to top">↑</button>

    <div class="container-fluid landing-page">
        <header>
            <nav class="navbar navbar-expand-lg">
                <a class="navbar-brand" href="#"><img class="logo" src="img/bon-appetit-logo.jpg"></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon "><i class="fa fa-bars" aria-hidden="true"></i></span>
                </button>
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav w-50 justify-content-around">
                        <li class="nav-item">
                            <a class="nav-link" href="#">Home </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Blog</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Contact</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <div class="container landing-page-inner d-flex align-items-center justify-content-center">
            <div class="hero-msg">
                <h3 class="">Foodie Tales</h3>
                <p class="lead writing">Food Reviews and Experiments from an eggetarian</p>
            </div>
        </div>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col footer d-flex flex-column align-items-center justify-content-center">
                <img class="logo" src="img/bon-appetit-logo.jpg">
                <h3>Be on a delicious rhythm</h3>
                <p>Share</p>
                <div class="social">
                    <a href="#"><span><i class="fa fa-facebook" aria-hidden="true"></i></span></a>
                    <a href="#"><span><i class="fa fa-twitter" aria-hidden="true"></i></span></a>
                    <a href="#"><span><i class="fa fa-google" aria-hidden="true"></i></span></a>
                    <a href="#"><span><i class="fa fa-pinterest" aria-hidden="true"></i></span></a>
                    <a href="#"><span><i class="fa fa-instagram" aria-hidden="true"></i></span></a>
                </div>
                <hr>
                <p><small>Copyright Lorem ipsum dolor sit amet, consectetur adipisicing elit.</small></p>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/js/bootstrap.min.js" integrity="sha384-a5N7Y/aK3qNeh15eJKGWxsqtnX/wWdSZSKp+81YjTmS15nvnvxKHuzaWwXHDli+4" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/up-button.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
